{% extends 'basebackoffice.html.twig' %}


{% block product %}
    <h1>Annonces index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Description</th>
                <th>Category</th>
                <th>Etat</th>
                <th>Location</th>
                <th>Date</th>
                <th>Image</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for annonce in annonces|reverse %}
                <tr>
                    <td>{{ annonce.id }}</td>
                    <td>{{ annonce.titre }}</td>
                    <td>{{ annonce.description }}</td>
                    <td>{{ annonce.categorie }}</td>
                    <td>{{ annonce.etat }}</td>
                    <td>{{ annonce.localisation }}</td>
                    <td>{{ annonce.datePub ? annonce.datePub|date('Y-m-d H:i:s') : '' }}</td>
                    <td>
                        {% if annonce.imageFilename %}
                            <img src="{{ asset('uploads/images/' ~ annonce.imageFilename) }}" alt="Annonce Image" style="max-width: 100px;">
                        {% else %}
                            No image available
                        {% endif %}
                    </td>
                    <td>
                     <a href="{{ path('app_annonce_show', {'id': annonce.id}) }}" class="btn btn-primary"> Show </a>
                        
                      {# <tr> <a href="{{ path('app_annonce_edit', {'id': annonce.id}) }}"class="btn icon icon-left btn-primary"><svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-edit"><path d="M11 4H4a2 2 0 0 0-2 2v14a2 2 0 0 0 2 2h14a2 2 0 0 0 2-2v-7"></path><path d="M18.5 2.5a2.121 2.121 0 0 1 3 3L12 15l-4 1 1-4 9.5-9.5z"></path></svg> edit</a> #}
                        
                     {{ include('annonce/_delete_form.html.twig') }}
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="9">No records found</td>
                </tr>
                
            {% endfor %}
        </tbody>
    </table>

   {# <a href="{{ path('app_annonce_new') }}"class="btn btn-primary">Create new</a> #}
{% endblock %}
