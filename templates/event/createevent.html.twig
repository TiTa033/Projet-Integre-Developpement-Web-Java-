<script>
 // Update the custom file label when files are selected
document.querySelector('.custom-file-input').addEventListener('change', function(event) {
  const input = event.target;
  const label = input.nextElementSibling;
  const files = input.files;
  const fileNames = [];

  // Clear any existing image previews
  const imagePreviews = document.getElementById('image-previews');
  imagePreviews.innerHTML = '';

  // Loop through the selected files and display their thumbnails
  for (let i = 0; i < files.length; i++) {
    const fileName = files[i].name;
    fileNames.push(fileName);

    // Create a new image object and set its source to the selected file
    const image = new Image();
    image.src = URL.createObjectURL(files[i]);

    // When the image is loaded, create a canvas element and draw the image on it
    image.onload = function() {
      const canvas = document.createElement('canvas');
      const ctx = canvas.getContext('2d');
      const width = 100;
      const height = (this.height / this.width) * width;
      canvas.width = width;
      canvas.height = height;
      ctx.drawImage(this, 0, 0, width, height);

      // Create a new div element to contain the thumbnail and "x" button
      const previewDiv = document.createElement('div');
      previewDiv.className = 'image-preview';

      // Create a new image element and set its source to the thumbnail
      const thumbnail = new Image();
      thumbnail.src = canvas.toDataURL('image/png');
      previewDiv.appendChild(thumbnail);

      // Create a new "x" button element
      const closeButton = document.createElement('button');
      closeButton.className = 'close';
      closeButton.innerHTML = '&times;';
      closeButton.addEventListener('click', function() {
        // Remove the image preview element from the image previews container
        imagePreviews.removeChild(previewDiv);

        // Remove the corresponding file from the input element's files array
        const index = Array.from(input.files).indexOf(files[i]);
        if (index > -1) {
          input.files.splice(index, 1);
        }

        // Update the custom file label with the names of the remaining files
        label.innerHTML = Array.from(input.files).map(file => file.name).join(', ');
      });

      // Append the "x" button element to the image preview element
      previewDiv.appendChild(closeButton);

      // Add the preview div element to the image previews div
      imagePreviews.appendChild(previewDiv);
    };
  }

  // Update the custom file label with the names of the selected files
  label.innerHTML = fileNames.join(', ');
});

</script>

