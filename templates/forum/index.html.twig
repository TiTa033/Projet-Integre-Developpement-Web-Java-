{% extends 'baseback.html.twig' %}

{% block title %}Forum List{% endblock %}

{% block tableforum %}
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <h1 class="mb-4">Forum List</h1>
                <table class="table table-striped">
                    <thead class="thead-dark">
                        <tr>
                           
                            <th>Name</th>
                            <th>Created At</th>
                            <th>Updated At</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for forum in forums %}
                            <tr>
                               
                                <td>{{ forum.name }}</td>
                                <td>{{ forum.createdAt ? forum.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                                <td>{{ forum.updatedAt ? forum.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
                                <td>
                                    <a href="{{ path('app_forum_show', {'id': forum.id}) }}" class="btn btn-primary mr-2">Show</a>
                                    <a href="{{ path('app_forum_edit', {'id': forum.id}) }}" class="btn btn-primary rounded-pill">Edit</a>
                                </td>
                            </tr>
                        {% else %}
                            <tr>
                                <td colspan="5">No forums found</td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
{% endblock %}
