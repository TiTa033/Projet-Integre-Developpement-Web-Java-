{% extends 'BaseBackOffice.html.twig' %}

{% block title %}Livraison index{% endblock %}

{% block content %}
    <h1>Livraison index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Statut</th>
                <th>Adresse</th>
                <th>Cout</th>
                <th>Methode</th>
                <th>Date</th>
                <th>Commentaires</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for livraison in livraisons %}
            <tr>
                <td>{{ livraison.id }}</td>
                <td>{{ livraison.Statut }}</td>
                <td>{{ livraison.Adresse }}</td>
                <td>{{ livraison.Cout }}</td>
                <td>{{ livraison.Methode }}</td>
                <td>{{ livraison.Date }}</td>
                <td>{{ livraison.Commentaires }}</td>
                <td>
                    <a href="{{ path('app_livraison_show', {'id': livraison.id}) }}"class="btn btn-primary rounded-pill">show</a>
                    
                  
                   
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    
    <br>
    <br>
{% endblock %}
